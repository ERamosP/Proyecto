<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AhorcadoMAUI.Views.SinglePlayer"
             xmlns:VM="clr-namespace:AhorcadoMAUI.ViewModels"
             BackgroundImageSource="background.jpg"
             >

    <ContentPage.BindingContext>
        <VM:clsSinglePlayerVM/>
    </ContentPage.BindingContext>


    <VerticalStackLayout>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Text="NÃºmero de intentos restantes :" TextColor="Red" HorizontalOptions="End" Margin="0,20,40,0" FontSize="20"/>
            <Label Text="{Binding IntentosRestantes}" TextColor="Red" HorizontalOptions="End" Margin="0,20,20,0" FontSize="20"/>
        </Grid>

        <Image Source="{Binding Imagen}" WidthRequest="300" Margin="0,70,0,0"/>

        <Label Text="{Binding Adivinado}" FontSize="20" TextColor="Black" HorizontalOptions="Center"/>

        <Entry Placeholder="Inserte letra" Text="{Binding InputJugador}"  WidthRequest="150" Margin="10" FontSize="15" TextColor="Black"/>

        <Button Command="{Binding EnviarInputCommand}" Text="Comprobar letra" WidthRequest="150" Margin="10" TextColor="Green"  FontSize="15"/>

        <Label Text="{Binding LblAvisos}" TextColor="Red" HorizontalOptions="Center" FontSize="20" Margin="10"/>

        <Label Text="{Binding LetrasSeleccionadas}"  TextColor="Black" HorizontalOptions="Center" FontSize="20"/>

    </VerticalStackLayout>
</ContentPage>