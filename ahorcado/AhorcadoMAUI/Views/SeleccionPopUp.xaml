<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="AhorcadoMAUI.Views.SeleccionPopUp"
             CanBeDismissedByTappingOutsideOfPopup="False"
             Size="300, 375"
             x:Name="fondo"
             Color="Transparent">
    <Frame
        CornerRadius="0"
        BackgroundColor="White">
        <StackLayout
            BackgroundColor="White"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Label
                HorizontalOptions="Center"
                Margin="0,10,0,0"
                TextColor="Black"
                Text="Seleccione una palabra"/>
            <Button 
                x:Name="btn1"
                Style="{DynamicResource botonAzulStyle}"
                Clicked="palabraSeleccionada1"/>
            <Button 
                x:Name="btn2"
                Style="{DynamicResource botonNaranjaStyle}"
                Clicked="palabraSeleccionada2"/>
            <Button 
                x:Name="btn3"
                Style="{DynamicResource botonAzulStyle}"
                Clicked="palabraSeleccionada3"/>
        </StackLayout>
    </Frame>
</toolkit:Popup>